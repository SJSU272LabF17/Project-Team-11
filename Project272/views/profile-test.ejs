                <div class="profile-usertitle">
                    <div class="profile-usertitle-name">
                        <span class="hidden-xs"><%= user.firstName %> <%= user.lastName %></span>
                    </div>
                    <div class="profile-usertitle-job">
                    </div>
                </div>
                <!-- END SIDEBAR USER TITLE -->
                <!-- SIDEBAR MENU -->
                <div class="profile-usermenu">
                    <ul class="nav">
                        <li class="active">
                            <a href="#Personal"  data-toggle="tab">
                                <i class="glyphicon glyphicon-home"></i>
                                <span class="hidden-xs">Profile</span> </a>
                        </li>
                        <li>
                            <a href="#Expertise" data-toggle="tab">
                                <i class="glyphicon glyphicon-user"></i>
                                <span class="hidden-xs">My Interests</span> </a>
                        </li>
                        <li>
                            <a href="#Events" data-toggle="tab">
                                <i class="glyphicon glyphicon-ok"></i>
                                <span class="hidden-xs">My Events </span></a>
                        </li>
                    </ul>
                </div>
                <!-- END MENU -->
            </div>
        </div>




        <div class="tab-content">
            <div class="col-md-9 order-content tab-pane" id="Personal">

                <div class="form_main col-md-4 col-sm-5 col-xs-7 " >
                    <h4 class="heading"><strong>Personal  Contact </strong><span></span></h4>
                    <div class="form">

                        <!-- PROFILE PAGE -->
                        <div class="container">
                            <table>
                                <tr><th>
                                        Name
                                    </th>
                                    <td width="10%">  </td>
                                    <td>
                                        <span>  <%= user.firstName %> <%= user.lastName %></span>
                                    </td>
                                    <td>
                                        <span></span>
                                    </td>

                                </tr>

                                <tr>
                                    <th>Email</th>
                                    <td width="10%">  </td>
                                    <td><span><%= user.email %></span></td>
                                </tr>


                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-9 order-content tab-pane active" id="Expertise">

                <div class="form_main  " >
                    <table>
                        <tr align="left">
                            <th>What would you like to volunteer for? <br/><br/></th>

                        </tr>
                        <% for(var i=0; i<user.volunteer.length; i++) {%>
                        <tr >
                            <td >
                                <span><%= user.volunteer[i].expertise_name %></span>
                            </td>
                            <td>

                            </td>
                        </tr>
                        <% } %>
                        <tr><td><br/></td></tr>

                        <form method="post" action="/addExpertiseVolunteer" >
                            <tr>
                                <td><select name="selectExpertiseVolunteer">
                                        <% for(var i=0; i<expertiseAll.length; i++) {%>

                                        <option value ='<%-JSON.stringify(expertiseAll[i])%>'><%= expertiseAll[i].expertise_name %></option>

                                        <% } %>
                                    </select>
                                    <input name="email" value="<%= user.email %>" style="visibility:hidden"></input>

                                </td>
                                <td>
                                    <button class="btn btn-outline-success">Add</button>
                                </td>
                            </tr>
                            <tr><td><br/></td></tr>
                        </form>

                        <tr><td><hr /></td></tr>
                        <tr align="left">

                            <th>What can you train volunteers in?<br/><br/></th></tr>

                        <% for(var i=0; i<user.train.length; i++) {%>
                        <tr >
                            <td ><span><%= user.train[i].expertise_name %></span></td> </tr>
                        <% } %>
                        <tr><td><br/></td></tr>
                        <form method="post" action="/addExpertiseTrain" >
                            <tr>
                                <td><select name="selectExpertiseTrain">
                                        <% for(var i=0; i<expertiseAll.length; i++) {%>
                                        <option  value ='<%-JSON.stringify(expertiseAll[i])%>'  ><%= expertiseAll[i].expertise_name %></option>
                                        <% } %>
                                    </select>
                                    <input name="email" value="<%= user.email %>" style="visibility:hidden"></input>


                                </td>
                                <td>
                                    <button class="btn btn-outline-success">Add</button>
                                </td>
                            </tr>

                        </form>
                    </table>
                </div>
            </div>

            <div class="col-md-9 order-content tab-pane" id="Events">





                <strong><span >Events created by me:</span></strong>

                <br/>

                <table>
                    <tr>
                        <td><span> Event Name</span></td>
                        <td> <span>Date </span></td>
                        <td><span> Venue </span></td>
                        <td><span> Description</span></td>
                    </tr>
                    <tr><td> <br/> </td></tr>

                    <% for(var i=0; i<events.length; i++) {%>
                    <tr >
                        <form id ="event" method="post" action="/goToEvent">
                            <td width="20%">

                                <span><%= events[i].name %></span></td>
                            <td width="20%">
                                <span><%= events[i].date %></span></td>
                            <td width="20%">
                                <span><%= events[i].venue %></span></td>
                            <td width="20%">
                                <span><%= events[i].description %></span></td>
                            <td width="20%"><button>Event Details</button></td>
                            <td><br/><br/></td>
                            <input name="event_id" value="<%= events[i].event_id %>" style="visibility:hidden"></input>
                            <input name="email" value="<%= user.email %>" style="visibility:hidden"></input>
                        </form>
                        <% } %>
                        </td>
                    </tr>
                </table>


            </div>

        </div>
        <script>
            $(document).ready(function() {
                if (location.hash) {
                    $("a[href='" + location.hash + "']").tab("show");
                }
                $(document.body).on("click", "a[data-toggle]", function(event) {
                    location.hash = this.getAttribute("href");
                });
            });
            $(window).on("popstate", function() {
                var anchor = location.hash || $("a[data-toggle='tab']").first().attr("href");
                $("a[href='" + anchor + "']").tab("show");
            });
        </script>





